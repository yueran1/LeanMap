<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:background="#424242"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrowed Box"
            android:id="@+id/borrowedBox"
            android:textColor="#EAEAEA"
            android:textSize="24sp"
            android:layout_marginTop="50dp"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewBorrowedBox"
            android:layout_below="@+id/borrowedBox"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Box"
            android:id="@+id/myBox"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/addPokemon"
            android:layout_alignParentStart="true"
            android:textColor="#EAEAEA"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewMyBox"
            android:layout_below="@+id/myBox"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addPokemon"
            android:text="Add Pokemon"
            android:id="@+id/addPokemon"
            android:layout_below="@+id/viewBorrowedBox"
            android:layout_alignParentEnd="true"
            android:textColor="#EAEAEA"
            android:background="#121212"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</ScrollView>